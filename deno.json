{
	"name": "@tagaroggu/goldrush",
	"version": "0.0.0",
	"exports": {
		".": "./mod.ts",
		"./escapeCodes": "./escapeCodes.ts",
		"./loadingBar": "./loadingBar.ts",
		"./spinner": "./spinner.ts"
	},
	"lint": {
		"include": ["./**/*.ts"],
		"rules": {
			"tags": ["recommended"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true, 
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["./**/*.ts"]
	},
	"test": ["./**/*.test.ts"],
	"publish": {
		"exclude": ["./**/*.test.ts"]
	}
}
